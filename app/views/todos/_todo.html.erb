<td>
  <%= link_to toggle_check_todo_path(todo),id: "todo-check-#{todo.id}", remote: true, method: :post do %>
    <% if todo.done? %>
      <span class="span-default my-font glyphicon glyphicon-check"></span>
    <% else %>
      <span class="span-default my-font glyphicon glyphicon-unchecked"></span>
    <% end %>
  <% end %>
</td>
<td>
  <p class="my-font title">
    <%= todo.title %>
  </p>
</td>
<td>
  <%= link_to edit_todo_path(id: todo.id), remote: true do %>
    <span class="span-default text-info glyphicon glyphicon-pencil"></span>
  <% end %>
    <span class="delete-todo my-pointer span-default text-danger glyphicon glyphicon-trash"></span>
</td>
